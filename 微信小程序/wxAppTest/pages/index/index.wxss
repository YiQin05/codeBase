/**index.wxss**/

.pageContainer{
  /* #483D8B */
  background-color: white;
  width: 100%;
  background-size: auto 100%;
}
.login{
  width: 100%;
}
.loginPanel{
  width: 670rpx;
  margin-left: 40rpx;
}
.loginPanel>.loginTitle{
  text-align: center;
}
.margin{
  margin-bottom: 40rpx;
}
.iconInput{
  width: 670rpx;
  opacity: .9
}
.iconInput .icon{
  width: 80rpx;
  height: 92rpx;
  float: left;
  border: 1px solid #A9A9A9;
  border-right: 0rpx;
  background-color: white;
  text-align: center; 
  box-sizing: border-box;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.iconInput .icon image{
  width: 40rpx;
  height: 100%;
}
.iconInput input{
  padding-left: 20rpx;
  width: 590rpx;
  height: 92rpx;
  float: left;
  border: 1px solid #A9A9A9;
  background-color: white;
  box-sizing: border-box;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.clear{
  clear: both;
}
.submit{
  color: white;
  background-color: #f40;
}