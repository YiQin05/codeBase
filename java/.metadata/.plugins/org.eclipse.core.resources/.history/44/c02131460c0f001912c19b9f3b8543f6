						flag = 0;
						star--;
						break;
					}
				}
			}
		}
		return end;
	}
	public void newSort(int arr[], int star, int end) {
		int index = qSort(star,end);
		if(star>=end) {
			return ;
		}
		newSort(arr,0,index-1);
		newSort(arr,index+1,arr.length-1);
	}
	public static void  main (String[] args) {
		HelloWorld helloworld = new HelloWorld();
		helloworld.newSort(helloworld.arr, 0, helloworld.arr.length-1);
		for(int i=0;i<helloworld.arr.length;i++) {
			System.out.print(helloworld.arr[i]+",");
		}
	}
